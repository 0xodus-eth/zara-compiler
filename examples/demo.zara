// String variables
let greeting: string = "Hello, Zara!";
let name: string = "Compiler";

// Boolean variables
let isRunning: boolean = true;
let isComplete: boolean = false;

// Array declaration
let numbers: array[10] of integer = new array[10] of integer;
let names: array of string = new array[5] of string;

// Stack declaration
let operands: stack of integer = new stack of integer;

